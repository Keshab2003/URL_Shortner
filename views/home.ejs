  <div style="margin: 32px 0 0 32px; width: 30vw;">
  <form action="/url" method="POST" class="bg-white p-8 rounded-xl shadow-lg flex flex-col justify-between">
    <div class="space-y-4">
      <div>
        <label for="url" class="block text-gray-700 font-medium mb-1">Actual Link</label>
        <input type="url" name="url" id="url" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        <p class="text-sm text-gray-500 mt-1">Provide the link you want to get the shorter version for!</p>
      </div>
    </div>
    <button type="submit" class="mt-6 w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition">
      Submit
    </button>
  </form>

  <div class="mt-6">
    <ul class="list-group">
      <% urls.forEach(url => { %>
        <li class="list-group-item w-full border border-gray-300 rounded px-3 py-2 text-red-700 flex justify-between items-center">
          https://localhost:3000/url/<%= url.shortUrl %>
        </li>
      <% }) %>
    </ul>
  </div>
</div>


